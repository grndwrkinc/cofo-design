<div class="section">
  {% if section.settings.title != blank %}
    <h2 class="h3">{{ section.settings.title | escape }}</h2>
  {% endif %}


{% if section.blocks.size > 0 %}
  <ul>
    {% for block in section.blocks %}
      <li>
        {% if block.settings.image != blank %}
          {{ block.settings.image | img_url: '160x160', scale: 2 | img_tag: block.settings.image.alt, 'icon-bar__image' }}
        {% else %}
          {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
        <p>
          {% if block.settings.logo_html != blank %}
            {{ block.settings.logo_html }}
          {% endif %}
        </p>
      </li>
    {% endfor %}
  </ul>
{% endif %}
{% if section.settings.text != blank %}
  {{ section.settings.text }}
{% endif %}
</div>

{% schema %}
  {
    "name": "Challenge List",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Text with Icons"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Icon List",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "html",
            "id": "logo_html",
            "label": "Icon Html"
          }
        ]
      }
    ]
  }
{% endschema %}
