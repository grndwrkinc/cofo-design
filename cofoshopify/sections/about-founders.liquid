<section class="about-story">
  {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
  {% endif %}
  {% if section.settings.text != blank %}
    <p>{{ section.settings.text }}</p>
  {% endif %}
  {% if section.settings.video_url != blank %}
    <iframe width="420" height="315" src="{{ section.settings.video_url }}"></iframe>
  {% endif %}
</section>

{% schema %}
  {
    "name": "About Story",
    "class": "about-story",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Text"
      },
      {
        "type": "video_url",
        "id": "video_url",
        "label": "Video URL",
        "accept": ["youtube", "vimeo"],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
      }
    ]
  }
{% endschema %}
